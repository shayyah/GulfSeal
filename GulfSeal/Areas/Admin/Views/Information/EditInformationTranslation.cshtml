@model GulfSeal.Areas.Admin.Models.ViewModels.InformationTranslationsViewModel
@{
    ViewBag.Title = "Create Content";
}

<h2>Create Content</h2>




<form action="~/Information/EditInformationTranslation" method="post">

    @Html.AntiForgeryToken()

     <input type="hidden" name="informationId" value="@ViewBag.informationId" />

    <div class="form-horizontal">
        <h4>Languages </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @{ int i = 0;}
        @foreach (var translation in Model.InformationTranslationsWithLanguages)
        {

            <div class="form-group">
                @translation.LanguageName
            </div>

            <input type="hidden" id="InformationTranslationsWithLanguages_@(i)__InformationTranslation_LanguageId" name="InformationTranslationsWithLanguages[@(i)].InformationTranslation.LanguageId" value="@translation.LanguageId" />
            <input type="hidden" id="InformationTranslationsWithLanguages_@(i)__InformationTranslation_InformationId" name="InformationTranslationsWithLanguages[@(i)].InformationTranslation.InformationId" value="@ViewBag.informationId" /> 
             

            <div class="form-group">
                Name
                <div class="col-md-10">
                    @Html.EditorFor(model => model.InformationTranslationsWithLanguages[i].InformationTranslation.Title, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            
            i = i + 1;
        }


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

