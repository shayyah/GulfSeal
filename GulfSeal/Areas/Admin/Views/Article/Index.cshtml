@model IEnumerable<GulfSeal.Models.Article>

@{
    ViewBag.Title = "Index";
}


<div class="my-3 my-md-5">
    <div class="container">
        <div class="page-header">
            <h1 class="page-title">
                Languages
            </h1>
        </div>
        <div class="row row-cards row-deck">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">

                            <a href="@Url.Action("Create","Article")" class="btn btn-primary btn-sm"
                               style="color:#ffffff">
                                <span class="fa fa-plus"></span>
                                Create New Article
                            </a>

                        </h3>

                    </div>
                    <div class="table-responsive">
                        <table class="table card-table table-vcenter text-nowrap" id="ArticlesTable">
                            <thead>
                                <tr>
                                    <th>
                                        Master Image
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Title)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CreatedAt)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.LastUpdatedAt)
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>




                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="@item.Link" style="width:60px;height:60px;" />
                                        </td>
                                        <td>
                                            @Html.ActionLink(item.Title, "Details", "Article", new { id = item.Id, area = "Admin" }, null)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreatedAt)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LastUpdatedAt)
                                        </td>


                                        <td  class="text-right">
                                            @Html.ActionLink("Edite", "Edite", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts {

    <script>
        require(['jquery', 'selectize'], function ($, selectize) {



            $(document).ready(function () {
                $('#ArticlesTable').DataTable({ fixedHeader: true, aaSorting: [] });
            });


        });
    </script>

}
